@model Product

<h1 class="alert alert-danger">Are you sure you want to delete @Model.Name ?</h1>

<partial name="_ProdData" />

<form method="post" asp-controller="Product" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-controller="Product" asp-action="GetIndexView">Back to List</a>